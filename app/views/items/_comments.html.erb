<p>Comments</p>

<% @item.comments.each do |comment| %>
  <p class=""><%= comment.user.username %> wrote <%= distance_of_time_in_words(Time.current, comment.created_at) %> ago</p>
  <div class=""><%= comment.body %></div>
  <% if !current_user.nil? && (comment.user.username == current_user.username) %>
    <%= button_to "Remove", @comment, method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } %>  <br>
  <% end %>
<% end %>

<% if @item.comments.empty? %>
  <p>No one has made a comment yet, be the first one.</p>
<% end %>

<% if logged_in? %>
  <p class="">Leave a Comment.</p>
  <%= form_for @item.comments.build do |f| %>
    <%= f.hidden_field :item_id, value: @item.id %>
    <%= f.text_area :body, rows: 4, class: "" %>
    <%= f.submit "Post", class: "" %>
  <% end %>
<% else %>
  <p class=""><%= link_to "Sign Up", sign_up_path %> or <%= link_to "Log In", log_in_path %> To leave a Comment.</p>
<% end %>