<!DOCTYPE html>
<html>
  <head>
    <title>TemplateStore</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>
    <%= button_to 'Home', root_path, method: :get %>
    <% if logged_in? %>
      <%= button_to "Logout", sessions_path, method: :delete %>
    <% else %>
      <%= button_to "Login", log_in_path, method: :get %>
      <%= button_to "Sign Up", sign_up_path, method: :get %>
    <% end %>

    <%= yield %>
  </body>
</html>
