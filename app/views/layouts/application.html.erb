<!DOCTYPE html>
<html>
  <head>
    <title>TemplateStore</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class=''>
    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>
    <div class="menu">
      <nav>
      <ul>
        <li> <a href="#"><%= link_to 'Home', root_path, method: :get %> </a> </li>
        <% if logged_in? %>
        <li> <a href="#"> <%= link_to "Logout", sessions_path, method: :delete %> </a> </li>
          
        <% else %>
        <li> <a href="" ><%= link_to "Login", log_in_path, method: :get %></a> </li>
        <li> <a href=""> <%= link_to "Sign Up", sign_up_path, method: :get %> </a> </li>
          
        <% end %>
      </ul>
      </nav>
    </div>
  <div class= 'container'>
    <div class="content">
      <%= yield %>
    </div>
  </div>
  </body>
</html>
